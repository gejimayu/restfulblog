<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 border">
            <h2>Edit post</h2>
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input value="<%=blog.title%>" class="form-control" id="title" type="text" name="blog[title]">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input value="<%=blog.image%>" class="form-control" id="image" type="text" name="blog[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5"name="blog[content]"><%=blog.content%></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
    
</div>
    
<% include partials/footer.ejs %>